@model IEnumerable<LeaveRequest>

@{
    ViewData["Title"] = "Index";
}

@if (!User.IsInRole("HR"))
{
    <p>
        <a class="btn btn-primary my-3" asp-action="ApplyLeave">Apply Leave</a>
    </p>
    <table class="table table-striped table-bordered table-hover align-items-center my-3 text-center">
        @if (ViewData["Error"] != null)
        {
            <h1 class="text-center">@ViewData["Error"]</h1>
        }
        else
        {
            <thead>
                <tr>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Starting Date
                    </th>
                    <th>
                        Ending Date
                    </th>
                    <th>
                        Reason
                    </th>
                    <th>
                        Leave Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.From)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.To)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reason)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApprovalStatus)
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
}
